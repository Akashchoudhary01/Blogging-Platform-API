<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= blog.title %>
  </title>
  <%- include('./Partials/head.ejs') %>
</head>

<body>

  <%- include('./Partials/nav.ejs') %>

    <div class="container my-5">

      <!-- Title -->
      <h1 class="fw-bold mb-2">
        <%= blog.title %>
      </h1>

      <!-- Category -->
      <h5 class="text-muted mb-3">
        <%= blog.category %>
      </h5>

      <!-- Tags -->
      <div class="d-flex flex-wrap gap-2 mb-4">
        <% blog.tags.forEach(tag=> { %>
          <span class="badge rounded-pill bg-primary-subtle text-primary border">
            <%= tag %>
          </span>
          <% }) %>
      </div>

      <!-- Content -->
      <p class="fs-5 lh-lg">
        <%= blog.content %>
      </p>

      <a href="/edit/<%= blog._id %>" class="text-warning btn btn-link">
        Edit
      </a>
      <a href="/delete/<%= blog._id %>" class="text-danger p-2 border-1 btn btn-link">
        Delete
      </a>
      <!-- <button onclick="deleteBlog('/delete/<%= blog._id %>')" class="btn btn-danger">
        Delete
      </button> -->
    </div>


    <%- include('./Partials/Script.ejs') %>


</body>

</html>